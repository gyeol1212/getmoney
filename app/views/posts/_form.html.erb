<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group container">
  <div class="ff field">
    <%= f.label :date %>
    <br>
    <%= f.date_select :date, class: "ff form-control text-center" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :title, class: "ff text-left" %>
    <%= f.text_field :title, class: "ff form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :etc, class: "ff text-left" %>
    <%= f.text_field :etc, class: "ff form-control" %>
  </div>
  <br>
  <div class="d-flex">
    <div class="actions">
      <button type="submit" class="btn btn-info">
      제출
      </button>
    &nbsp    
    </div>
    <button class="btn btn-info">
      <%= link_to '뒤로', posts_path %>
      </button>
  </div>
<% end %>
</div>