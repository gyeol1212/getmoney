<div class = "container">
<h1> 다른 사람의 기획안 보기 </h1>

<table class = "table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.date %></td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.user.username  %></td>   
      </tr>
    <% end %>

  </tbody>
</table>
<br>

<%= link_to 'New Post', new_post_path %><br>

<%= form_tag(all_posts_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
<%= submit_tag "Search" %>
<% end %>
</div>