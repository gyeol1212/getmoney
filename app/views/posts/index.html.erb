<div class="container">
<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>날짜</th>
      <th>제목</th>
      <th>총액</th>
      <th>사람 수</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="tabletext">
        <td><%= post.date %></td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.tables.sum("total") %></td>
        <td><%= post.member %></td>
        <td><%= link_to '수정하기', edit_post_path(post) %></td>
        <td><%= link_to '삭제하기', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %><br>
<a href="/posts/all">다른 사람이 쓴 것도 보기</a>
</div>