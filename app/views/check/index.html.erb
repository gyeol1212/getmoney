
<div class=>
    <form action="/posts/<%= @post.id%>/check" method="post" class="my-5 ">
        <input type="string" name="gets" class=" texttr inputsize" >
        <input type="submit" value="입력">
    </form>
</div>


<div class="d-flex justify-content-around">
    <div class="divposition">
       <p> 안 낸사람 </p>
         <% @checks_sort.each do |x| %>
            <% if x.money != 1 %>
                <form action="/posts/<%= @post.id%>/check/yes/<%=x.id%>" mehtod="post">
                    <%= x.name %>
                    <input type="submit" value="확인">
                    <%= link_to '삭제', post_check_path(@post.id,x.id), method: :delete%>

                </form>
            <% end %>
        <% end %>
    </div>
    <div class="divposition">
        낸사람
        <% @checks.each do |x| %>
            <% if x.money == 1 %>
                <form action="/posts/<%= @post.id%>/check/no/<%=x.id%>" mehtod="post">
                    <%= x.name %>
                    <input type="submit" value="확인">
                    <%= link_to '삭제', post_check_path(@post.id,x.id), method: :delete%>
                    
                </form>
            <% end %>
        <% end %>
    </div>
</div>   
